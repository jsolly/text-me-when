---
interface Props {
  label: string;
  id: string;
  type: string;
  placeholder: string;
  pattern?: string;
}

const { label, id, type, placeholder, pattern } = Astro.props;
---

<div>
  <label for={id} class="block text-sm font-medium text-slate-700 mb-1">{label}</label>
  <input 
    type={type} 
    id={id} 
    name={id}
    class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
    placeholder={placeholder}
    pattern={pattern}
    required
  >
</div> 